<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    tools:context=".Fragments.SongsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/playlist"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:background="@color/colorTabBackgroundLighter"
        android:text="@string/choose_playlist"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="28sp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/lvPlaylist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="10dp"
        android:layout_below="@+id/playlist"
        android:layout_alignParentBottom="true"
        android:scrollbarThumbVertical="@drawable/custom_scroll"
        android:divider="@drawable/custom_divider"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnAddPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_add"/>


</RelativeLayout>