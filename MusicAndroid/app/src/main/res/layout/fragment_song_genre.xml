<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    tools:context=".SongsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/song_genre_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:background="@color/colorTabBackgroundLighter"
        android:text="Song genres"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lvSong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/song_genre_txt"
        android:layout_marginStart="12dp" />

    <ProgressBar
        android:id="@+id/progressLoadMusic"
        android:layout_below="@id/song_genre_txt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible" />


</RelativeLayout>