<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="140dp"
    android:padding="20dp"
    android:background="@drawable/custom_border">

    <ImageView
        android:id="@+id/companyLogo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/companyLogo">

        <TextView
            android:id="@+id/titleJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:text="Title Job"
            />


        <TextView
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_below="@id/titleJob"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:text="Company Name"
            />

        <TextView
            android:id="@+id/typeJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/companyName"
            android:layout_alignBaseline="@+id/companyName"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:text=" / Type Job"
            />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/companyName"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:text="Ho Chi Minh"
            />

        <TextView
            android:id="@+id/createdAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/location"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:text="25/05/2018"
            />


    </RelativeLayout>

</RelativeLayout>